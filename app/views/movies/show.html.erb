<div>
  <div>
    <h1>
      Movie #<%= @the_movie.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", movies_path %>
        <!--<a href="<%#= movies_path %>">
          Go back
        </a>-->
      </div>

      <div>
      <%= link_to "Edit movie", edit_movie_path(@the_movie) %>
        <!--<a href="<%#= edit_movie_path(@the_movie) %>">
          Edit movie
        </a>-->
      </div>

      <div>
      <%= link_to "Delete movie", movie_path(@the_movie), method: :delete, data: { turbo_confirm: "Are you sure?" } %>
        <!--<a href="movie_path(@the_movie) %>" data-turbo-method="delete">
          Delete movie
        </a>-->
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_movie.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_movie.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_movie.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_movie.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
